@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/assets/plugins/sweetalert/sweetalert.css" rel="stylesheet" type="text/css" />

<div class="page-wrapper">
    <input type="hidden" id="urlProduct" name="urlProduct" value="@Url.Action("getProductList", "Product")" />
    <input type="hidden" id="ProductEdit" value="@Url.Action("Edit", "Product")" />
    <input type="hidden" id="ProductDelete" value="@Url.Action("Delete", "Product")" />


    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="row page-titles">
            <div class="col-md-5 col-8 align-self-center">
                <h3 class="text-themecolor">Productos</h3>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                    <li class="breadcrumb-item active"><a href="@Url.Action("Index", "Dashboard")">Dashboard</a></li>
                </ol>
            </div>
            <div class="col-md-7 col-4 align-self-center">
                <div class="d-flex m-t-10 justify-content-end">
                    <div class="d-flex m-r-20 m-l-10 hidden-md-down">

                    </div>
                    <div class="d-flex m-r-20 m-l-10 hidden-md-down">

                    </div>

                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Start Page Content -->
        <!-- ============================================================== -->
        <!-- Row -->
        <div class="row">
            <!-- Column -->
            <div class="col-md-6 col-lg-12">

                <div class="col-md-12">
                    <div class="card card-body">
                        <div class="portlet light portlet-fit add-padding-pagination">
                            <div class="portlet-title" style="padding-bottom: 0px;">
                                <div class="caption bold uppercase font-green-seagreen ">
                                    <i class="font-green-seagreen  bold icon-list"></i>
                                    <span class="caption-subject bold">Listado de productos</span>
                                </div>
                                <div class="actions" align="right">
                                    <a href="@Url.Action("Create")" class="btn btn-success">
                                        Nuevo
                                        <i class="fa fa-plus"></i>
                                    </a>
                                </div>
                            </div>


                            <div class="portlet-body" id="container_report">
                                <table id="data-table-product" class="table table-striped table-bordered table_list">
                                    <thead>
                                        <tr>
                                            <th>Nombre</th>
                                            <th>Descripcion</th>
                                            <th>Precio</th>
                                            <th class="text-right">Última actualización</th>
                                            <th class="text-right">Acción</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>

                            </div>
                        </div>
                    </div>
                </div>


            </div>



            <!-- ============================================================== -->
            <!-- End Container fluid  -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- footer -->
            <!-- ============================================================== -->
            <footer class="footer"> © 2023 Universidad tecnologica de hermosillo Marin Moreno Jesus Paul</footer>
            <!-- ============================================================== -->
            <!-- End footer -->
            <!-- ============================================================== -->
        </div>
        <script src="~/Content/assets/js/table-manage-product.js"></script>
        <script src="../../Content/assets/plugins/jquery/jquery.min.js"></script>
        <script src="../../Content/assets/plugins/sweetalert/sweetalert.min.js"></script>
        <script src="../../Content/assets/plugins/sweetalert/jquery.sweet-alert.custom.js"></script>
        <script src="../../Content/assets/plugins/datatables/jquery.dataTables.min.js"></script>


    </div>
    <script type="text/javascript">
    $(document).ready(function () {


            $('#myTable').DataTable();
        TableManageProductDefault.init();

        });

        $('#example23').DataTable({
            dom: 'Bfrtip',
            buttons: [
                'copy', 'csv', 'excel', 'pdf', 'print'
            ]
        });</script>
