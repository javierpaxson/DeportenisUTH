@model API.Models.Products




@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-wrapper">

    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="row page-titles">
            <div class="col-md-5 col-8 align-self-center">
                <h3 class="text-themecolor">Universidad Tecnologica de Hermosillo </h3>

            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Start Page Content -->
        <!-- ============================================================== -->
        <!-- Row -->
        <div class="row">            
            <div class="col-md-12">
                <div class="card card-body">

                    @using (Ajax.BeginForm("_Edit", null, new AjaxOptions { OnSuccess = "OnSuccess" }, new { @id = "formAdd", @class = "form-horizontal", Autocomplete = "off" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(r => r.Id, new { @class = "txtIdentity" })
                        <h4 class="card-title">Registro de producto</h4>
                        <div class="actions" align="right">
                            <a href="@Url.Action("Index")" class="btn btn-success">
                                Regresar
                            </a>
                        </div>
                        <h6 class="card-subtitle">Productos del sistema</h6>
                        <form class="form-horizontal p-t-20">
                            <div class="form-group row">
                                <label for="exampleInputuname3" class="col-sm-3 control-label">Categorias*</label>
                                <div class="col-sm-9">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="basic-addon1">
                                                <i class="ti-user"></i>
                                            </span>
                                        </div>
                                        @*<input type="text" class="form-control" id="name" placeholder="Nombre">*@
                                        @Html.DropDownListFor(r => r.CategoryID, (IEnumerable<SelectListItem>)ViewBag.CategoriesList, null, new { @class = "form-control ", @style = "width: 100%", @id = "Id_category" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="exampleInputuname3" class="col-sm-3 control-label">Nombre*</label>
                                <div class="col-sm-9">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="basic-addon1">
                                                <i class="ti-user"></i>
                                            </span>
                                        </div>
                                        @*<input type="text" class="form-control" id="name" placeholder="Nombre">*@
                                        @Html.TextBoxFor(r => r.Name, new { @class = "form-control text-uppercase", @placeholder = "Nombre del producto", @maxlength = "50" })

                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="exampleInputuname3" class="col-sm-3 control-label">Nombre*</label>
                                <div class="col-sm-9">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="basic-addon1">
                                                <i class="ti-user"></i>
                                            </span>
                                        </div>
                                        @*<input type="text" class="form-control" id="name" placeholder="Nombre">*@
                                        @Html.TextBoxFor(r => r.Name, new { @class = "form-control text-uppercase", @placeholder = "Nombre del producto", @maxlength = "50" })

                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="exampleInputuname3" class="col-sm-3 control-label">Descripcion*</label>
                                <div class="col-sm-9">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="basic-addon1">
                                                <i class="ti-comment-alt"></i>
                                            </span>
                                        </div>
                                        @*<input type="text" class="form-control" id="description" placeholder="Descripcion">*@
                                        @Html.TextBoxFor(r => r.Description, new { @class = "form-control text-uppercase", @placeholder = "Descripcion del producto", @maxlength = "50" })

                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="exampleInputuname3" class="col-sm-3 control-label">Precio*</label>
                                <div class="col-sm-9">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="basic-addon1">
                                                <i class="ti-credit-card"></i>
                                            </span>
                                        </div>
                                        @*<input type="text" class="form-control" id="description" placeholder="Descripcion">*@
                                        @Html.TextBoxFor(r => r.Price, new { @class = "form-control text-uppercase", @placeholder = "Descripcion del producto", @maxlength = "50" })

                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="exampleInputuname3" class="col-sm-3 control-label">Stock*</label>
                                <div class="col-sm-9">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="basic-addon1">
                                                <i class="ti-package"></i>
                                            </span>
                                        </div>
                                        @*<input type="text" class="form-control" id="description" placeholder="Descripcion">*@
                                        @Html.TextBoxFor(r => r.Stock, new { @class = "form-control text-uppercase", @placeholder = "Stock del producto", @maxlength = "50" })

                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="exampleInputuname3" class="col-sm-3 control-label">Ventas*</label>
                                <div class="col-sm-9">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="basic-addon1">
                                                <i class="ti-shopping-cart-full"></i>
                                            </span>
                                        </div>
                                        @*<input type="text" class="form-control" id="description" placeholder="Descripcion">*@
                                        @Html.TextBoxFor(r => r.SaleOff, new { @class = "form-control text-uppercase", @placeholder = "Ventas del producto", @maxlength = "50" })

                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="control-label col-sm-3">Fecha</label>
                                <div class="col-sm-9">
                                    @{
                                        @Html.HiddenFor(r => r.Date, new { @id = "txtAdmissionDate" })
                                        string parameterValue = Model.Date.ToString("yyyy-MM-dd").Substring(0, 10);

                                        <input type="date" class="form-control" placeholder="dd/mm/yyyy" id="AdmissionDateAUX" value=@parameterValue>
                                        @*@Html.TextBoxFor(r => parameterValue, new { type = "date", @class = "form-control",@id = "AdmissionDate" })*@
                                    }
                                </div>
                            </div>a

                            <div class="form-group row">
                                <label for="exampleInputuname3" class="col-sm-3 control-label">Imagen*</label>
                                <div class="col-sm-9">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="basic-addon1">
                                                <i class=" ti-image"></i>
                                            </span>
                                        </div>
                                        @*<input type="text" class="form-control" id="image" placeholder="Imagen">*@
                                        @Html.TextBoxFor(r => r.Image, new { @class = "form-control text-uppercase", @placeholder = "imagen del producto", @maxlength = "50" })

                                    </div>
                                </div>
                            </div>

                            <div class="form-group row m-b-0">
                                <div class="offset-sm-3 col-sm-9">
                                    <button type="submit" class="btn btn-info waves-effect waves-light">Guardar</button>
                                </div>
                            </div>
                        </form>
                    }
                </div>
            </div>

        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Container fluid  -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- footer -->
    <!-- ============================================================== -->
    <footer class="footer"> © Marin Moreno Jesus Paul</footer>
    <!-- ============================================================== -->
    <!-- End footer -->
    <!-- ============================================================== -->
    
</div>
<script src="../../Content/assets/plugins/jquery/jquery.min.js"></script>
<script>
    
    $("#AdmissionDateAUX").change(function () {
        $('#txtAdmissionDate').val($('#AdmissionDateAUX').val());
    });
</script>




